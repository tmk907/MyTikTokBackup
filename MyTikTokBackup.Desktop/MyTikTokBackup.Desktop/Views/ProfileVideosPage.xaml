<Page
    x:Class="MyTikTokBackup.Desktop.Views.ProfileVideosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyTikTokBackup.Desktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Text="{x:Bind VM.UserUniqueId, Mode=OneWay}" />
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="Posted" Click="Button_Click" />
                    <Button Content="Liked" Click="Button_Click_1"/>
                </StackPanel>
            </StackPanel>
            <Grid Grid.Row="1">
                <ListView
                    x:Name="postedLV"
                    IsItemClickEnabled="True"
                    ItemsSource="{x:Bind VM.PostedVideos}"
                    SelectionChanged="PostedVideos_SelectionChanged"
                    SelectionMode="Single"
                    Visibility="Visible">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Video.Description}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ListView
                    x:Name="likedLV"
                    IsItemClickEnabled="True"
                    ItemsSource="{x:Bind VM.LikedVideos}"
                    SelectionChanged="LikedVideos_SelectionChanged"
                    SelectionMode="Single"
                    Visibility="Collapsed">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Video.Description}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <WebView2
                x:Name="webView"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />
        </Grid>
    </Grid>
</Page>
